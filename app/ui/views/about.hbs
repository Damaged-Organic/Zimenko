<!DOCTYPE html>
<html lang="en">
<head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-106471938-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments)};
      gtag('js', new Date());

      gtag('config', 'UA-106471938-1');
    </script>
    {{> head/meta meta=meta}}
	{{> head/favicons}}
    <link rel="stylesheet" href="{{static 'css' 'about.bundle.min.css'}}">
</head>
<body class="preload">
    <div id="page">
        <span id="top-lane"></span>
        <div id="menu">
            <div class="top-holder">
                {{> header/logo}}
                {{> header/btn_close}}
                {{> header/langs_holder}}
            </div>
            {{> menu/menu_holder}}
			{{> menu/socials_holder}}
			{{> menu/text_overlay}}
        </div>
        <main id="content">
            <header id="header">
                {{> header/logo_holder}}
                {{> header/open_menu_button}}
                {{> header/langs_holder}}
            </header>
            <section class="container about-holder">
                <div class="photo-holder">
                    <figure>
                        <img src="{{ cloudinary about.image.public_id '{"format": "png"}' }}" alt="{{ about.cleanTitle }}">
                    </figure>
                </div>
                <div class="inner">
                    <div class="info-holder">
                        <h1>{{{ about.title }}}</h1>
                        {{{ about.content }}}
                    </div>
                </div>
                <div class="btn btn-contact">
                    <a href="{{url 'contacts'}}">
                        <span class="text">{{i18n 'Contact us'}}</span>
                    </a>
                </div>
            </section>
        </main>
        {{> loaders/progress_holder}}
        <div id="common-loader-holder">
            {{> loaders/loader}}
        </div>
        {{> common/landscape}}
    </div>
    <script src="{{static 'js' 'about.bundle.min.js'}}"></script>
</body>
</html>
